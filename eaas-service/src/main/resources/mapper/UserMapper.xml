<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.UserMapper">
    <sql id="user-columns">id,name,lname,ename,sex,mobile,tel,mail,fax,zipcode,address,passwd1,passwd2,passwd3,passwd4,passwd5,status,util,mdate,mid,otype,photourl,remark</sql>
    <select id="getUserById" resultType="com.enchantment.eaas.domain.User">
        select
            <include refid="user-columns"></include>
        from t_user where ID=#{id}
    </select>

    <select id="getUsers">
        select
            <include refid="user-columns"></include>
        from t_user
        where
        <if test="id != null and id != ''">
            and id=#{id}
        </if>
        <if test="sex != 0">
            and sex=#{sex, jdbcType=INTEGER}
        </if>
        <if test="status != 0">
            and status=#{status, jdbcType=INTEGER}
        </if>
        name,
        lname,
        ename,
        mobile,
        mail,
    </select>

    <insert id="addUser">
        insert into t_user
          <include refid="user-columns"></include>
        values (#{id},#{name},#{lname},#{ename},#{sex},#{mobile},#{tel},#{mail},#{fax},#{zipcode},#{address},#{passwd1},#{passwd2},#{passwd3},#{passwd4},#{passwd5},#{status},#{util},#{mdate},#{mid},#{otype},#{photourl},#{remark})
    </insert>

    <update id="modUser">
        update t_user set
            id=#{id},
            name=#{name},
            lname=#{lname},
            ename=#{ename},
            sex=#{sex},
            mobile=#{mobile},
            tel=#{tel},
            mail=#{mail},
            fax=#{fax},
            zipcode=#{zipcode},
            address=#{address},
            passwd1=#{passwd1},
            passwd2=#{passwd2},
            passwd3=#{passwd3},
            passwd4=#{passwd4},
            passwd5=#{passwd5},
            status=#{status},
            util=#{util},
            mdate=#{mdate},
            mid=#{mid},
            otype=#{otype},
            photourl=#{photourl},
            remark=#{remark}
        where ID=#{id}
    </update>

    <delete id="delUser">
        delete from t_user where id=#{id}
    </delete>
</mapper>